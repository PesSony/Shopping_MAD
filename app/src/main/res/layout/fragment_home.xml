<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green30_custom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text=" WE_Welcome"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollDek"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card -->
            <LinearLayout
                android:id="@+id/boxDis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_custom"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/topbox">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"

                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="16dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <RelativeLayout
                        android:id="@+id/cardDis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/green30_custom">

                        <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:rotation="45"
                            android:scaleType="fitStart"
                            android:src="@drawable/nike1" />

                        <TextView
                            android:id="@+id/txtDis"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:background="@color/blue_custom"
                            android:gravity="center"
                            android:text="@string/txt_labelCardView"
                            android:textSize="29sp"
                            tools:ignore="VisualLintOverlap" />

                        <ImageView
                            android:id="@+id/imgProduct1"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/txtDis"
                            android:rotation="-45"
                            android:scaleType="fitEnd"
                            android:src="@drawable/vanold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="8dp"
                                android:background="@mipmap/bgk_cardslider" />

                            <View
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="8dp"
                                android:background="@mipmap/bgk_cardslider"
                                android:backgroundTint="@color/blue_custom" />

                            <View
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="8dp"
                                android:background="@mipmap/bgk_cardslider" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- Card -->

            <!--   Scroll-Horizontal Start      -->
            <HorizontalScrollView
                android:id="@+id/scrollDek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue_custom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:fontFamily="sans-serif-black"
                        android:text="New Product !!!"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp">


                        <LinearLayout
                            android:id="@+id/box1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/blue_custom"
                            android:orientation="vertical"
                            app:cardElevation="10dp"
                            app:layout_constraintStart_toStartOf="parent">


                            <androidx.cardview.widget.CardView

                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="15dp"
                                app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/jordanman" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/box2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:background="@color/blue_custom"
                            android:orientation="vertical"
                            app:layout_constraintStart_toEndOf="@+id/box1">

                            <androidx.cardview.widget.CardView

                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="15dp"
                                app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/nike1" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/box3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:background="@color/blue_custom"
                            android:orientation="vertical"
                            app:layout_constraintStart_toEndOf="@+id/box2">

                            <androidx.cardview.widget.CardView

                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="15dp"
                                app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/covertman" />
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:background="@color/blue_custom"
                            android:orientation="vertical"
                            app:layout_constraintStart_toEndOf="@+id/box3">

                            <androidx.cardview.widget.CardView

                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="15dp"
                                app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/vanold" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/box4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:background="@color/blue_custom"
                            android:orientation="vertical"
                            app:layout_constraintStart_toEndOf="@+id/box3">

                            <androidx.cardview.widget.CardView

                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="15dp"
                                app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/nike1" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <!--   Scroll-Horizontal End-->

            <!--   Scroll-Down -->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/scrollDek"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_custom"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Good Product"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@color/blue_custom"
                        android:columnCount="2"
                        android:rowCount="5">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardViewRow0Col0"
                                    android:layout_width="180dp"
                                    android:layout_height="150dp"
                                    app:cardCornerRadius="5dp"
                                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/booo" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textViewShoesRow0Col0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="@string/Products_Name"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textViewPriceRow0Col0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/Price"
                                    android:textColor="@color/black"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@+id/textViewPriceRow0Col0"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewPriceRow0Col0" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardViewRow0Col1"
                                    android:layout_width="180dp"
                                    android:layout_height="150dp"
                                    app:cardCornerRadius="5dp"
                                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/boooo" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textViewShoesRow0Col1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="@string/Products_Name"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toEndOf="@+id/cardViewRow0Col1"
                                    app:layout_constraintTop_toTopOf="@+id/cardViewRow0Col1" />

                                <TextView
                                    android:id="@+id/textViewPriceRow0Col1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/Price"
                                    android:textColor="@color/black"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@+id/textViewPriceRow0Col1"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewPriceRow0Col1" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardViewRow1"
                                    android:layout_width="180dp"
                                    android:layout_height="150dp"
                                    app:cardCornerRadius="5dp"
                                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/boooblack" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textViewShoesRow1col0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="@string/Products_Name"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toEndOf="@+id/cardViewRow1"
                                    app:layout_constraintTop_toTopOf="@+id/cardViewRow1" />

                                <TextView
                                    android:id="@+id/textViewPriceRow1Col0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/Price"
                                    android:textColor="@color/black"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@+id/textViewShoesRow1col0"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewShoesRow1col0" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardViewRow1Col1"
                                    android:layout_width="180dp"
                                    android:layout_height="150dp"
                                    app:cardCornerRadius="5dp"
                                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/boo" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textViewRow1col1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="@string/Products_Name"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toEndOf="@+id/cardViewRow1Col1"
                                    app:layout_constraintTop_toTopOf="@+id/cardViewRow1Col1" />

                                <TextView
                                    android:id="@+id/textViewPriceRow1Col1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/Price"
                                    android:textColor="@color/black"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@+id/textViewRow1col1"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewRow1col1" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardViewRow2Col0"
                                    android:layout_width="180dp"
                                    android:layout_height="150dp"
                                    app:cardCornerRadius="5dp"
                                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/booo" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textViewShoesRow2Col0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="@string/Products_Name"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toEndOf="@+id/cardViewRow2Col0"
                                    app:layout_constraintTop_toTopOf="@+id/cardViewRow2Col0" />

                                <TextView
                                    android:id="@+id/textViewPriceRow2Col0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/Price"
                                    android:textColor="@color/black"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@+id/textViewPriceRow0Col0"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewPriceRow0Col0" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_rowWeight="2"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardViewRow2Col1"
                                    android:layout_width="180dp"
                                    android:layout_height="150dp"
                                    app:cardCornerRadius="5dp"
                                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
                                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/boooo" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textViewShoesRow2Col1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="@string/Products_Name"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toEndOf="@+id/cardViewRow0Col1"
                                    app:layout_constraintTop_toTopOf="@+id/cardViewRow0Col1" />

                                <TextView
                                    android:id="@+id/textViewPriceRow2Col1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/Price"
                                    android:textColor="@color/black"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@+id/textViewPriceRow0Col1"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewPriceRow0Col1" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center"
                                android:orientation="vertical">

